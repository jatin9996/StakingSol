pragma solidity ^0.8.0;




contract StakingContract is AccessControl, ReentrancyGuard {
    using SafeERC20 for IERC20;

    // Roles
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant AUTHORIZED_ROLE = keccak256("AUTHORIZED_ROLE");

function addAdminRole(address account) external onlyRole(ADMIN_ROLE) {
        _grantRole(ADMIN_ROLE, account);
    }
    // Staking parameters
    struct Staker {
        uint256 stakedAmount;
        uint256 lastStakeTime;
        uint256 selectedProductIndex;
        uint256 rewardDebt; // Tracks pending rewards
    }

    struct Product {
        uint256 duration;
        uint256 rewardRate; // In basis points (e.g., 500 = 5%)
    }

    Product[] public products;
    mapping(address => Staker) public stakers;
    mapping(address => bool) public isStaker; // Optimized staker tracking
    IERC20 public stakingToken;
    IERC20 public rewardToken; // Token used for rewards
    uint256 public totalStaked;

    uint256 public penaltyRate = 2000; // Default 20% penalty for early withdrawal (basis points)

    address[] private stakerList; 

    event Staked(address indexed user, uint256 amount, uint256 productIndex);
    event Withdrawn(address indexed user, uint256 amount, bool early, uint256 penalty);
    event RewardsClaimed(address indexed user, uint256 reward);
    event StakingTokenUpdated(address indexed token);
    event RewardTokenUpdated(address indexed token);
    event ProductAdded(uint256 duration, uint256 rewardRate);
    event ProductUpdated(uint256 index, uint256 duration, uint256 rewardRate);
    event PenaltyRateUpdated(uint256 newPenaltyRate);

    constructor() {
        _grantRole(ADMIN_ROLE, msg.sender);
        _setRoleAdmin(AUTHORIZED_ROLE, ADMIN_ROLE);

        // Define initial products
        products.push(Product({duration: 90 days, rewardRate: 500}));   // 3 Months
        products.push(Product({duration: 180 days, rewardRate: 700}));  // 6 Months
        products.push(Product({duration: 365 days, rewardRate: 1000})); // 12 Months
    }

    /**
     * @notice Set the staking token
     * @param _stakingToken The address of the ERC20 token to be used for staking
     */
    function setStakingToken(address _stakingToken) external onlyRole(ADMIN_ROLE) {
        require(_stakingToken != address(0), "Invalid token address");
        stakingToken = IERC20(_stakingToken);
        emit StakingTokenUpdated(_stakingToken);
    }

    /**
     * @notice Set the reward token
     * @param _rewardToken The address of the ERC20 token to be used for rewards
     */
    function setRewardToken(address _rewardToken) external onlyRole(ADMIN_ROLE) {
        require(_rewardToken != address(0), "Invalid token address");
        rewardToken = IERC20(_rewardToken);
        emit RewardTokenUpdated(_rewardToken);
    }

    /**
     * @notice Update the penalty rate
     * @param newPenaltyRate The new penalty rate in basis points (e.g., 2000 = 20%)
     */
    function setPenaltyRate(uint256 newPenaltyRate) external onlyRole(ADMIN_ROLE) {
        require(newPenaltyRate <= 5000, "Penalty rate too high");
        penaltyRate = newPenaltyRate;
        emit PenaltyRateUpdated(newPenaltyRate);
    }

    /**
     * @notice Add a new staking product
     * @param duration The duration of the staking product in seconds
     * @param rewardRate The reward rate in basis points (e.g., 500 = 5%)
     */
    function addProduct(uint256 duration, uint256 rewardRate) external onlyRole(ADMIN_ROLE) {
        products.push(Product({duration: duration, rewardRate: rewardRate}));
        emit ProductAdded(duration, rewardRate);
    }

    /**
     * @notice Update an existing staking product
     * @param index The index of the product to update
     * @param duration The new duration of the staking product in seconds
     * @param rewardRate The new reward rate in basis points
     */
    function updateProduct(uint256 index, uint256 duration, uint256 rewardRate) external onlyRole(ADMIN_ROLE) {
        require(index < products.length, "Invalid product index");
        products[index] = Product({duration: duration, rewardRate: rewardRate});
        emit ProductUpdated(index, duration, rewardRate);
    }

    /**
     * @notice Stake tokens with a selected product
     * @param amount The amount of tokens to stake
     * @param selectedProductIndex The index of the staking product to use
     */
    function stake(uint256 amount, uint256 selectedProductIndex) external nonReentrant {
        require(amount > 0, "Amount must be greater than zero");
        require(address(stakingToken) != address(0), "Staking token not set");
        require(selectedProductIndex < products.length, "Invalid product index");

        Staker storage staker = stakers[msg.sender];

        // Check if the user is already staked in a 3-month product
        if (staker.stakedAmount > 0 && products[staker.selectedProductIndex].duration == 90 days) {
            require(products[selectedProductIndex].duration == 90 days, "Cannot stake in other products while staked in 3-month product");
        }

        if (!isStaker[msg.sender]) {
            isStaker[msg.sender] = true;
            stakerList.push(msg.sender);  // Add to the list of stakers
        }

        if (staker.stakedAmount > 0) {
            _claimRewards(msg.sender);
        }

        staker.stakedAmount += amount;
        staker.lastStakeTime = block.timestamp;
        staker.selectedProductIndex = selectedProductIndex;
        totalStaked += amount;

        stakingToken.safeTransferFrom(msg.sender, address(this), amount);

        emit Staked(msg.sender, amount, selectedProductIndex);
    }

    /**
     * @notice Withdraw staked tokens
     * @param amount The amount of tokens to withdraw
     */
    function withdraw(uint256 amount) external nonReentrant {
        Staker storage staker = stakers[msg.sender];
        require(amount > 0, "Amount must be greater than zero");
        require(staker.stakedAmount >= amount, "Insufficient staked balance");

        _claimRewards(msg.sender);

        uint256 selectedProductIndex = staker.selectedProductIndex;
        Product memory selectedProduct = products[selectedProductIndex];

        bool earlyWithdrawal = block.timestamp < staker.lastStakeTime + selectedProduct.duration;
        uint256 penalty = 0;

        if (earlyWithdrawal) {
            penalty = (amount * penaltyRate) / 10000;
        }

        uint256 amountToTransfer = amount - penalty;
        staker.stakedAmount -= amount;
        totalStaked -= amount;

        if (staker.stakedAmount == 0) {
            isStaker[msg.sender] = false;

            // Remove the staker from stakerList
            for (uint256 i = 0; i < stakerList.length; i++) {
                if (stakerList[i] == msg.sender) {
                    stakerList[i] = stakerList[stakerList.length - 1]; // Replace with last element
                    stakerList.pop(); // Remove last element
                    break;
                }
            }
        }

        stakingToken.safeTransfer(msg.sender, amountToTransfer);

        emit Withdrawn(msg.sender, amountToTransfer, earlyWithdrawal, penalty);
    }

    /**
     * @notice Claim pending rewards
     */
    function claimRewards() external nonReentrant {
        _claimRewards(msg.sender);
    }

    /**
     * @notice Internal function to calculate and distribute rewards
     * @param stakerAddress The address of the staker
     */
    function _claimRewards(address stakerAddress) internal {
        Staker storage staker = stakers[stakerAddress];
        if (staker.stakedAmount == 0) return;

        Product memory selectedProduct = products[staker.selectedProductIndex];
        uint256 stakingDuration = block.timestamp - staker.lastStakeTime;
        uint256 pendingReward = (staker.stakedAmount * selectedProduct.rewardRate * stakingDuration) / (365 days * 10000);

        staker.rewardDebt = 0; // Reset rewards
        staker.lastStakeTime = block.timestamp; // Update timestamp

        if (pendingReward > 0) {
            rewardToken.safeTransfer(stakerAddress, pendingReward);
            emit RewardsClaimed(stakerAddress, pendingReward);
        }
    }

    /**
     * @notice Get leaderboard
     * @return addresses List of staker addresses
     * @return amounts List of staked amounts
     */
    function getLeaderboard()
        external
        view
        onlyRole(AUTHORIZED_ROLE)
        returns (address[] memory addresses, uint256[] memory amounts)
    {
        uint256 stakerCount = stakerList.length;
        addresses = new address[](stakerCount);
        amounts = new uint256[](stakerCount);

        for (uint256 i = 0; i < stakerCount; i++) {
            address staker = stakerList[i];
            addresses[i] = staker;
            amounts[i] = stakers[staker].stakedAmount;
        }
    }

    /**
     * @notice Get total stakers
     * @return The total number of unique stakers
     */
    function getTotalStakers() external view returns (uint256) {
        return stakerList.length;
    }
}